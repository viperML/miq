export MIQ_DATABASE_URL="/miq/db.sqlite"

watch_file ./miq
if [[ ! -L ./miq ]] || [[ ! -e ./miq ]]; then
    ln -vsTf /miq ./miq
fi

watch_file flake.nix
watch_file flake.lock
watch_file miq/devshell.nix

use flake

if [[ ! -f .env ]]; then
    touch .env
fi

PATH_add target/release

watch_file .env
dotenv .env
