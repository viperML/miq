{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PkgSpec",
  "description": "miq consumes pkg-spec files",
  "type": "object",
  "required": [
    "pkg"
  ],
  "properties": {
    "pkg": {
      "description": "List of packages to build",
      "type": "array",
      "items": {
        "$ref": "#/definitions/Pkg"
      }
    }
  },
  "definitions": {
    "Fetchable": {
      "description": "A fetchable is fetched from the internet and hash-checked",
      "type": "object",
      "required": [
        "hash",
        "url"
      ],
      "properties": {
        "hash": {
          "description": "SRI hash to check for integrity",
          "type": "string"
        },
        "url": {
          "description": "URL to fetch",
          "type": "string"
        }
      }
    },
    "Pkg": {
      "description": "Definition of a package. A package the minimum buildable unit",
      "type": "object",
      "required": [
        "env",
        "fetch",
        "name",
        "path",
        "script",
        "version"
      ],
      "properties": {
        "env": {
          "description": "Environment variables present at buildtime",
          "type": "object",
          "additionalProperties": {
            "type": "string"
          }
        },
        "fetch": {
          "description": "List of fecthables available during build-time",
          "type": "array",
          "items": {
            "$ref": "#/definitions/Fetchable"
          }
        },
        "name": {
          "description": "Name of the package, normalized",
          "type": "string"
        },
        "path": {
          "description": "Path that this package produces",
          "type": "string"
        },
        "script": {
          "description": "POSIX script excuted at build-time",
          "type": "string"
        },
        "version": {
          "description": "Version of the package, normalized",
          "type": "string"
        }
      }
    }
  }
}
