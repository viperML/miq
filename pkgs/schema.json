{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "PkgSpec",
  "type": "object",
  "required": [
    "pkg"
  ],
  "properties": {
    "pkg": {
      "type": "array",
      "items": {
        "$ref": "#/definitions/Pkg"
      }
    }
  },
  "definitions": {
    "Fetchable": {
      "type": "object",
      "required": [
        "hash",
        "url"
      ],
      "properties": {
        "hash": {
          "type": "string"
        },
        "url": {
          "type": "string"
        }
      }
    },
    "Pkg": {
      "description": "Vscode Even Better Toml: Wipe cache with: rm ~/.config/Code/User/globalStorage/tamasfe.even-better-toml/* */",
      "type": "object",
      "required": [
        "fetch",
        "name",
        "path",
        "script",
        "version"
      ],
      "properties": {
        "fetch": {
          "type": "array",
          "items": {
            "$ref": "#/definitions/Fetchable"
          }
        },
        "name": {
          "type": "string"
        },
        "path": {
          "type": "string"
        },
        "script": {
          "type": "string"
        },
        "version": {
          "type": "string"
        }
      }
    }
  }
}
