{
    "vim.disableExtension": true,
    "latex-workshop.latex.outDir": "%DIR%/out",
    "latex-workshop.latex.tools": [
        {
            "name": "just-build",
            "command": "just",
            "args": [
                "build"
            ],
        },
        {
            "name": "just-watch",
            "command": "just",
            "args": [
                "watch"
            ],
        },
        {
            "name": "just-sync",
            "command": "just",
            "args": [
                "sync"
            ],
        },
    ],
    "latex-workshop.latex.recipes": [
        {
            "name": "sync-build",
            "tools": [
                "just-sync",
                "just-build"
            ]
        },
        {
            "name": "build",
            "tools": [
                "just-build"
            ]
        },
    ],
}
